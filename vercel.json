{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/app.py" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "backend/app.py": {
      "memory": 3008,
      "maxDuration": 30
    }
  }
}
