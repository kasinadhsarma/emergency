{
    "version": 2,
    "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh",
    "builds": [
        {
            "src": ".vercel/backend/app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb",
                "includeFiles": [
                    ".vercel/backend/models/**",
                    ".vercel/backend/utils/**"
                ]
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": ".vercel/backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
    "env": {
        "PYTHONPATH": "/var/task/backend"
    }
}
